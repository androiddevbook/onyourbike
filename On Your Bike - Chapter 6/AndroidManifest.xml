    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.androiddevbook.onyourbike.chapter6.OnYourBike"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GreenTheme" >
        <activity
            android:name="com.androiddevbook.onyourbike.chapter6.activities.TimerActivity"
            android:label="@string/title_activity_timer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androiddevbook.onyourbike.chapter6.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.androiddevbook.onyourbike.chapter6.activities.RoutesActivity"
            android:label="@string/title_activity_routes" >
        </activity>
        <activity
            android:name="com.androiddevbook.onyourbike.chapter6.activities.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
    </application>

</manifest>